# use the same image as the CI
ARG UBUNTU_TAG

FROM --platform=linux/amd64 ubuntu:${UBUNTU_TAG}

# adds args/envs for the config.ts
# requires to bind mount the test folder to /app/tests/
# requires to bind mount the dist-e2e/

WORKDIR /app

COPY dist-dev/playwright.config.ts playwright.config.ts
COPY dist-dev/projectNames.ts projectNames.ts
COPY dist-dev/annotations.ts annotations.ts

COPY tsconfig.container.json tsconfig.json
COPY package.container.json package.json

# Install package.json deps
RUN npm install

# Install browsers
RUN npx playwright install-deps