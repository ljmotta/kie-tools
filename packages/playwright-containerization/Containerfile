# It must use the same image as the CI
ARG UBUNTU_IMAGE_TAG

FROM --platform=linux/amd64 ubuntu:${UBUNTU_IMAGE_TAG}

WORKDIR /kie-tools

# Create files that will be used during the test execution
COPY ./dist-dev/playwright.config.ts playwright-base/playwright.config.ts
COPY ./dist-dev/projectNames.ts playwright-base/projectNames.ts
COPY ./dist-dev/annotations.ts playwright-base/annotations.ts
RUN mkdir env

# Make it available for the package playwright.config.ts
RUN ln -s ./playwright-base/projectNames.ts projectNames.ts

COPY tsconfig.container.json tsconfig.json
COPY package.container.json package.json

ARG NODE_VERSION
RUN echo $NODE_VERSION

# Install node
RUN apt update && apt install -y curl && rm -rf /var/lib/apt/lists/*
ENV NVM_DIR=/root/.nvm
RUN curl -o- https://raw.githubusercontent.com/nvm-sh/nvm/v0.40.1/install.sh | bash
RUN . "$NVM_DIR/nvm.sh" && nvm install ${NODE_VERSION}
RUN . "$NVM_DIR/nvm.sh" && nvm use v${NODE_VERSION}
RUN . "$NVM_DIR/nvm.sh" && nvm alias default v${NODE_VERSION}
ENV PATH="/root/.nvm/versions/node/v${NODE_VERSION}/bin/:${PATH}"

# Install package.json deps
RUN npm install -g pnpm@9.3.0
RUN pnpm install

# Install browsers
RUN pnpm exec playwright install --with-deps chromium webkit chrome && rm -rf /var/lib/apt/lists/*
