{
  "name": "@kie-tools/playwright-containerization",
  "version": "0.0.0",
  "description": "",
  "license": "Apache-2.0",
  "keywords": [],
  "homepage": "https://github.com/apache/incubator-kie-tools",
  "repository": {
    "type": "git",
    "url": "https://github.com/apache/incubator-kie-tools.git"
  },
  "bugs": {
    "url": "https://github.com/apache/incubator-kie-tools/issues"
  },
  "bin": {
    "kie-tools--playwright-containerization": "bin.js"
  },
  "scripts": {
    "build:dev": "tsc -p tsconfig.json",
    "build:prod": "pnpm cleanup && pnpm copy:assets && run-script-if --bool \"$(build-env containerImages.build)\" --then \"pnpm image:docker:build\"",
    "cleanup": "rimraf dist-dev && mkdir dist-dev",
    "copy:assets": "pnpm copy:playwright-base",
    "copy:playwright-base": "run-script-os",
    "copy:playwright-base:linux:darwin": "copyfiles -u 3 ./node_modules/@kie-tools/playwright-base/* ./dist-dev/",
    "docker:run": "docker run -it --rm --ipc=host --mount type=bind,source=\"$(pwd)\"/tests-e2e,target=/app/tests-e2e/ --mount type=bind,source=\"$(pwd)\"/dist-tests-e2e,target=/app/dist-tests-e2e --network=host apache/incubator-kie-playwright-containerization /bin/bash",
    "image:docker:build": "kie-tools--image-builder build -r \"$(build-env playwrightContainerization.registry)\" -a \"$(build-env playwrightContainerization.account)\" -n \"$(build-env playwrightContainerization.name)\" -t \"$(build-env playwrightContainerization.buildTag)\" --build-arg UBUNTU_IMAGE_TAG=\"$(build-env playwrightContainerization.ubuntuImageTag)\" --build-arg NODE_VERSION=\"$(build-env playwrightContainerization.nodeVersion)\""
  },
  "dependencies": {
    "yargs": "^17.0.1"
  },
  "devDependencies": {
    "@kie-tools/image-builder": "workspace:*",
    "@kie-tools/playwright-base": "workspace:*",
    "@kie-tools/root-env": "workspace:*",
    "@kie-tools/tsconfig": "workspace:*",
    "@playwright/test": "^1.45.2",
    "@types/yargs": "^17.0.1",
    "copyfiles": "^2.4.1",
    "rimraf": "^3.0.2",
    "run-script-os": "^1.1.6",
    "typescript": "^5.5.3"
  }
}
